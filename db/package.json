{
  "name": "yearlydiary-db",
  "version": "1.0.0",
  "devDependencies": {
    "@coat/cli": "0.0.26",
    "@coat/template-ts-package": "0.0.44",
    "@types/jest": "29.4.0",
    "@types/promise-retry": "1.1.3",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "execa": "7.0.0",
    "jest": "29.4.3",
    "node-pg-migrate": "6.2.2",
    "pg": "8.9.0",
    "prettier": "2.8.4",
    "promise-retry": "2.0.1",
    "rimraf": "4.1.2",
    "ts-jest": "29.0.5",
    "tsc-files": "1.1.3",
    "typescript": "4.9.5"
  },
  "files": [
    "build/"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint"
    ],
    "*.ts": [
      "prettier --write",
      "eslint",
      "tsc-files"
    ],
    "*.tsx": [
      "prettier --write",
      "eslint",
      "tsc-files"
    ]
  },
  "private": true,
  "scripts": {
    "bootstrap-db": "yarn build && node build/bootstrap-database",
    "build": "tsc -p tsconfig.build.json",
    "lint": "coat run lint:*",
    "lint:eslint": "eslint --ext .ts --max-warnings 0 src",
    "lint:prettier": "prettier --check src",
    "lint:types": "tsc",
    "migrate": "node-pg-migrate",
    "start-local-db": "yarn build && node build/start-local-db",
    "test": "jest"
  }
}
